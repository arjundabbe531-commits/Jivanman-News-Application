<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#D6D6D6" /> <!-- Light gray on press -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#EEEEEE" /> <!-- Default light circle -->
        </shape>
    </item>
</selector>
