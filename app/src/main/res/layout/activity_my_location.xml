<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MyLocationActivity">

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Map Type Buttons -->
    <LinearLayout
        android:id="@+id/mapTypeButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="#AAFFFFFF"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <!-- Normal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="4dp">

            <ImageButton
                android:id="@+id/btnNormal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_map_shape"
                android:src="@drawable/normal_map"
                android:contentDescription="Normal"
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:padding="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="12sp"
                android:textColor="#000000"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <!-- Satellite -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="4dp">

            <ImageButton
                android:id="@+id/btnSatellite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_map_shape"
                android:src="@drawable/satelite_map"
                android:contentDescription="Satellite"
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:padding="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Satellite"
                android:textSize="12sp"
                android:textColor="#000000"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <!-- Hybrid -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="4dp">

            <ImageButton
                android:id="@+id/btnHybrid"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_map_shape"
                android:src="@drawable/hybrid_map"
                android:contentDescription="Hybrid"
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:padding="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hybrid"
                android:textSize="12sp"
                android:textColor="#000000"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <!-- Terrain -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="4dp">

            <ImageButton
                android:id="@+id/btnTerrain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_map_shape"
                android:src="@drawable/terrial_map"
                android:contentDescription="Terrain"
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:padding="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terrain"
                android:textSize="12sp"
                android:textColor="#000000"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <!-- None -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="4dp">

            <ImageButton
                android:id="@+id/btnNone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_map_shape"

                android:contentDescription="None"
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:padding="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="12sp"
                android:textColor="#000000"
                android:paddingTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
