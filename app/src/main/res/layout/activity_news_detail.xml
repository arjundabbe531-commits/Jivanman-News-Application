<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fixed Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#ED835A"
        android:gravity="center_vertical|start"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/HomeActivityActionbarImage"
            android:layout_width="196dp"
            android:layout_height="128dp"
            android:adjustViewBounds="true"
            android:contentDescription="Jivanman app logo"
            android:scaleType="fitCenter"
            android:layout_marginTop="8dp"
            android:src="@drawable/jivanman_name5" />
    </LinearLayout>

    <!-- Scrollable News Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <!-- Title -->
            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:importantForAccessibility="yes"
                android:textColor="?android:textColorSecondary"
                android:text="शरद पवार – अजित पवार एकत्र? विधानसभा निवडणुकीसाठी नवा डावपेच!" />

            <!-- Description -->
            <TextView
                android:id="@+id/detailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:importantForAccessibility="yes"
                android:textColor="?android:textColorSecondary"
                android:layout_marginBottom="12dp" />

            <!-- Author -->
            <TextView
                android:id="@+id/writternby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Written by अर्जुन डब्बे"
                android:layout_marginBottom="2dp"
                android:importantForAccessibility="yes"
                android:textColor="?android:textColorSecondary"
                android:textSize="14sp" />

            <!-- Date -->
            <TextView
                android:id="@+id/detailDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Updated: Aug 05 2025 08:47 am"
                android:layout_marginBottom="12dp"
                android:textColor="?android:textColorSecondary"
                android:importantForAccessibility="yes"
                android:textSize="14sp" />

            <!-- Share/Bookmark Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/btnSave"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_button_bg"
                    android:layout_marginEnd="16dp"
                    android:padding="6dp"
                    android:contentDescription="Save article"
                    android:importantForAccessibility="yes"
                    android:focusable="true"
                    android:clickable="true"
                    android:src="@drawable/baseline_bookmark_border_24" />

                <ImageView
                    android:id="@+id/btnWhatsApp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_button_bg"
                    android:padding="6dp"
                    android:layout_marginEnd="16dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:contentDescription="Share on WhatsApp"
                    android:src="@drawable/baseline_whatsapp_24" />

                <ImageView
                    android:id="@+id/btnShare"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_button_bg"
                    android:padding="6dp"
                    android:layout_marginEnd="16dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:contentDescription="Share article"
                    android:src="@drawable/baseline_share_24" />
            </LinearLayout>
            <!-- News Image -->
            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/fadnvis_raj"
                android:scaleType="centerCrop"
                android:contentDescription="News related image"
                android:layout_marginBottom="12dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
