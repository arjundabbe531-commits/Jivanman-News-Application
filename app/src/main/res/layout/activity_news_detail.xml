<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Custom Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/customToolbarHomeActivity"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="100dp"
        android:paddingHorizontal="12dp"
        android:paddingTop="25dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight"
        app:title=" ">

        <ImageButton
            android:id="@+id/backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            app:tint="?attr/colorOnBackground"
            app:itemIconTint="?attr/colorOnPrimary"
            app:itemTextColor="?attr/colorOnPrimary"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_back_24" />

        <!-- Logo Section -->
        <FrameLayout
            android:id="@+id/logoGroup"
            android:paddingTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical |center"
            android:padding="8dp">

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="जीवनमान"
                android:textColor="#6A040F"
                android:textSize="40sp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:fontFamily="@font/tiro_devanagari_marathi_regular"
                android:letterSpacing="1.02"
                android:layout_gravity="center"
                android:shadowColor="#55000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="जनसामान्यांचे"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                android:fontFamily="@font/tiro_devanagari_marathi_regular"
                android:letterSpacing="1.01"
                android:layout_gravity="end|top"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="18dp"/>
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>


    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Article Title -->
            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/news_headline_text"
                android:text="NEWS HEADLINE" />

            <!-- Article Description -->
            <TextView
                android:id="@+id/detailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="NEWS DESCRIPTION HERE,"
                android:layout_marginBottom="12dp" />

            <!-- Written by -->
            <TextView
                android:id="@+id/writternby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WRITTEN BY: अर्जुन डब्बे"
                android:textColor="@color/news_writer_text"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <!-- Article Date -->
            <TextView
                android:id="@+id/detailDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPDATED : ५ ऑगस्ट २०२५, सकाळी ८:४७"
                android:textColor="@color/news_date_text"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/btnSave"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_button_bg"
                    android:padding="6dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="लेख सेव्ह करा"
                    android:src="@drawable/baseline_bookmark_border_24"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="?attr/colorOnBackground"
                    app:itemIconTint="?attr/colorOnPrimary"
                    app:itemTextColor="?attr/colorOnPrimary"

                    />

                <ImageView
                    android:id="@+id/btnWhatsApp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_button_bg"
                    android:padding="6dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="WhatsApp वर शेअर करा"
                    android:src="@drawable/baseline_whatsapp_24"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="?attr/colorOnBackground"
                    app:itemIconTint="?attr/colorOnPrimary"
                    app:itemTextColor="?attr/colorOnPrimary"/>

                <ImageView
                    android:id="@+id/btnShare"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_button_bg"
                    android:padding="6dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="इतरत्र शेअर करा"
                    android:src="@drawable/baseline_share_24"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="?attr/colorOnBackground"
                    app:itemIconTint="?attr/colorOnPrimary"
                    app:itemTextColor="?attr/colorOnPrimary"/>
            </LinearLayout>

            <!-- News Image -->
            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fadnvis_raj"
                android:layout_marginBottom="16dp"
                android:contentDescription="लेख संबंधित प्रतिमा" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>