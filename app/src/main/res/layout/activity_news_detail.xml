<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Custom Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#ED835A"
        android:paddingTop="25dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:elevation="4dp">

        <!-- Back Button -->

        <!-- App Logo (Center aligned) -->
        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/circle_button_bg"
            android:clickable="true"
            android:contentDescription="मागे जा"
            android:focusable="true"
            android:padding="6dp"
            android:paddingTop="20dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/HomeActivityActionbarImage"
            android:layout_width="196dp"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Jivanman लोगो"
            android:src="@drawable/jivanman_name5" />
    </RelativeLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Article Title -->
            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:text="लेख शीर्षक" />

            <!-- Article Description -->
            <TextView
                android:id="@+id/detailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:textColor="@android:color/black" />

            <!-- Written by -->
            <TextView
                android:id="@+id/writternby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="लेखक: अर्जुन डब्बे"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <!-- Article Date -->
            <TextView
                android:id="@+id/detailDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="अपडेट: ५ ऑगस्ट २०२५, सकाळी ८:४७"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/btnSave"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_button_bg"
                    android:padding="6dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="लेख सेव्ह करा"
                    android:src="@drawable/baseline_bookmark_border_24"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/btnWhatsApp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_button_bg"
                    android:padding="6dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="WhatsApp वर शेअर करा"
                    android:src="@drawable/baseline_whatsapp_24"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/btnShare"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_button_bg"
                    android:padding="6dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="इतरत्र शेअर करा"
                    android:src="@drawable/baseline_share_24"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- News Image -->
            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fadnvis_raj"
                android:layout_marginBottom="16dp"
                android:contentDescription="लेख संबंधित प्रतिमा" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>