<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="?attr/colorPrimary"
    android:padding="16dp">

    <!-- Logo Section -->
    <FrameLayout
        android:id="@+id/logoGroup"
        android:paddingTop="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="जीवनमान"
            android:textColor="#6A040F"
            android:textSize="52sp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:fontFamily="@font/tiro_devanagari_marathi_regular"
            android:letterSpacing="1.02"
            android:layout_gravity="center"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="जनसामान्यांचे"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:fontFamily="@font/tiro_devanagari_marathi_regular"
            android:letterSpacing="1.01"
            android:layout_gravity="end|top"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="21dp"/>
    </FrameLayout>

</LinearLayout>