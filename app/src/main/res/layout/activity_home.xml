<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <!-- Main content -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/customToolbarHomeActivity"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:minHeight="100dp"
            android:paddingHorizontal="12dp"
            android:paddingTop="25dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight"
            app:title=" ">

            <ImageButton
                android:id="@+id/btnDrawerToggle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="4dp"
                android:layout_gravity="start |center_vertical"
                app:tint="?attr/colorOnBackground"
                app:itemIconTint="?attr/colorOnPrimary"
                app:itemTextColor="?attr/colorOnPrimary"
                android:layout_marginStart="0dp"
                android:paddingEnd="14dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_menu_24"
                />

            <!-- Logo Section -->
            <FrameLayout
                android:id="@+id/logoGroup"
                android:paddingTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical |center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/appName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="जीवनमान"
                    android:textColor="#6A040F"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/tiro_devanagari_marathi_regular"
                    android:letterSpacing="1.02"
                    android:layout_gravity="center"
                    android:shadowColor="#55000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="जनसामान्यांचे"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="12sp"
                    android:fontFamily="@font/tiro_devanagari_marathi_regular"
                    android:letterSpacing="1.01"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="18dp"/>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/homeBottomNavView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:labelVisibilityMode="labeled"

            app:itemIconTint="?attr/colorOnPrimary"
            app:itemTextColor="?attr/colorOnPrimary"

            app:menu="@menu/bottom_navigation_menu" />
    </LinearLayout>

    <!-- Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/NavigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
