<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_secoundary"
    android:fillViewport="true"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:gravity="center_horizontal">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnBackground" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="प्रोफाईल"
                android:textColor="?attr/colorOnBackground"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/noto_sans_devanagari_ui_bold" />
        </LinearLayout>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivprofileImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:layout_marginTop="24dp"
                android:src="@drawable/round_person_24"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                android:contentDescription="Profile Image" />




        <!-- Edit Profile Text -->
        <TextView
            android:id="@+id/editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="प्रोफाईल संपादित करा"
            android:textSize="14sp"
            android:textColor="@color/my_primary"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/noto_sans_devanagari_ui_regular"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
           android:padding="4dp" />

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_person_24"
                android:contentDescription="Name icon"
                app:tint="?attr/colorOnBackground" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="नाव"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp"
                    android:fontFamily="@font/noto_sans_devanagari_ui_regular" />

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="~ नाव"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/noto_sans_devanagari_ui_bold" />
            </LinearLayout>
        </LinearLayout>
    <!-- Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_email_24"
            android:contentDescription="Name icon"
            app:tint="?attr/colorOnBackground" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ईमेल"
                android:textColor="?attr/colorOnBackground"
                android:textSize="14sp"
                android:fontFamily="@font/noto_sans_devanagari_ui_regular" />

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="~ ईमेल"
                android:textColor="?attr/colorOnBackground"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/noto_sans_devanagari_ui_bold" />
        </LinearLayout>
        </LinearLayout>

        <!-- Role -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_info_24"
                android:contentDescription="Role icon"
                app:tint="?attr/colorOnBackground" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="भूमिका"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/noto_sans_devanagari_ui_regular" />

                <TextView
                    android:id="@+id/tvProfileRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="वाचक/पत्रकार"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/noto_sans_devanagari_ui_bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Phone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_local_phone_24"
                android:contentDescription="Phone icon"
                app:tint="?attr/colorOnBackground" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="फोन नंबर"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/noto_sans_devanagari_ui_regular" />

                <TextView
                    android:id="@+id/tvProfileMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+91 9876543210"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/noto_sans_devanagari_ui_bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_vpn_key_24"
                android:contentDescription="ID icon"
                app:tint="?attr/colorOnBackground" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="आयडी क्रमांक"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/noto_sans_devanagari_ui_regular" />

                <TextView
                    android:id="@+id/tvProfileId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JIV123456"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/noto_sans_devanagari_ui_bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
