<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ScanCodeFragment"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- शीर्षक -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR स्कॅनर"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/my_primary"
            android:layout_marginBottom="32dp" />

        <!-- स्कॅन बटण -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnQRCodeScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_map_shape"
            android:text="QR स्कॅन करा"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_marginBottom="40dp"
            android:elevation="4dp"
            android:gravity="center" />

        <!-- स्कॅन डेटा -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvQRCodeScannerData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="इथे स्कॅन केलेली माहिती दिसेल"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
