<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <!-- Article Image -->
    <ImageView
        android:id="@+id/articleImage"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="Article Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="भारत 2025 मध्ये जगातील सर्वांत वेगाने वाढणारी अर्थव्यवस्था!"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:textColorSecondary"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/articleImage"
        app:layout_constraintTop_toTopOf="@id/articleImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/articleDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:text="भारताची GDP वाढ दर 6.5% — चीन, अमेरिका व युरोपच्या पुढे!"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintStart_toEndOf="@id/articleImage"
        app:layout_constraintTop_toBottomOf="@id/articleTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer: DateTime -->
    <TextView
        android:id="@+id/articleDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        android:text="31 Jul 2025 . 06:07 PM"
        android:textSize="12sp"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintStart_toEndOf="@id/articleImage"
        app:layout_constraintTop_toBottomOf="@id/articleDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>
